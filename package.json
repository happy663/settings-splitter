{
  "name": "settings-splitter",
  "displayName": "Settings Splitter",
  "description": "Split VSCode settings into multiple files for better organization",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "settings-splitter.mergeSettings",
        "title": "Merge Settings"
      },
      {
        "command": "settings-splitter.createSettingsFile",
        "title": "New Settings File",
        "icon": "$(add)"
      },
      {
        "command": "settings-splitter.deleteSettingsFile",
        "title": "Delete Settings File",
        "icon": "$(trash)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "settings-splitter",
          "title": "Settings Splitter",
          "icon": "img/icon/activitybar.svg"
        }
      ]
    },
    "views": {
      "settings-splitter": [
        {
          "id": "settingsFiles",
          "name": "設定ファイル"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "settings-splitter.createSettingsFile",
          "when": "view == settingsFiles",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "settings-splitter.deleteSettingsFile",
          "when": "view == settingsFiles",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "comment-json": "^4.2.5",
    "json5": "^2.2.3"
  }
}
